{{> header }}

<div class="container details">
    <div class="details-content">
        <h2>{{title}}</h2>
        <strong>{{category}}</strong>
        <p>{{content}}</p>
        <div class="buttons">
            {{#if userIsCreator}}
            <a href="#/delete/{{articleId}}" class="btn delete">Delete</a>
            <a href="#/edit/{{articleId}}" class="btn edit">Edit</a>
            <a href="#/home" class="btn edit">Back</a>
            {{/if}}
            {{#unless userIsCreator}}
            <a href="#/home" class="btn edit">Back</a>
            {{/unless}}
        </div>
    </div>
</div>

{{> footer }}